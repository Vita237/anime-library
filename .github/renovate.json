{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(deps)",
    ":semanticCommitScope(dev)",
    ":automergeTypes"
  ],
  "labels": [
    "dependencies"
  ],
  "baseBranches": [
    "main"
  ],
  "bumpVersion": "patch",
  "patch": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "packageRules": [
    {
      "packageNames": [
        "node",
        "npm"
      ],
      "enabled": false
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "semanticCommitScope": "prod"
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/vitejs/vite/"
      ],
      "groupName": "Vite monorepo packages",
      "automerge": false
    },
    {
      "matchPackagePatterns": [
        "^@typescript-eslint",
        "^eslint"
      ],
      "automerge": true,
      "groupName": "eslint"
    },
    {
      "matchPackageNames": [
        "electron",
        "electron-releases",
        "spectron"
      ],
      "separateMajorMinor": false,
      "groupName": "electron"
    }
  ],
  "rangeStrategy": "bump"
}
